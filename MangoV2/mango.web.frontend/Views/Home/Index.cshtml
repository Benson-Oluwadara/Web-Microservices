<form>
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 my-3">
                    <div class="card">
                        <h3 class="card-title text-center py-2">@product.Name</h3>
                        <img src="@product.ImageUrl" class="card-img-top" style="height: 450px; object-fit: cover;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px;">@string.Format("{0:c}", product.Price)</span>
                                <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
                            </div>
                            <p class="card-text">@Html.Raw(product.Description)</p>
                            <div class="row">
                                <div class="col">
                                    <a asp-action="Details" asp-route-productId="@product.ProductId"
                                       class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>
