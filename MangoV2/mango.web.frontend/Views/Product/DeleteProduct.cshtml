@model mango.web.frontend.Models.WebDTO.DeleteProductDTO

<form asp-action="DeleteProduct" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Product</h1>

        <hr />
        <div class="row">
            <!-- Hidden field for CouponId with asp-route attribute -->
            <div class="col-12">
                <input asp-for="ProductId" type="hidden" asp-route="ProductId" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Name </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category Name </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" readonly />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}